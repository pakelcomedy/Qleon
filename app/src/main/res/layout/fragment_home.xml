<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".ui.home.HomeFragment">

    <!-- Container untuk Teks Navigasi -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Teks Navigasi Kiri (Chats) -->
        <TextView
            android:id="@+id/chatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start" />

        <!-- Garis Bawah untuk Teks "Chats" -->
        <View
            android:id="@+id/chatsUnderline"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#00A8FF"
            app:layout_constraintTop_toBottomOf="@id/chatsText"
            app:layout_constraintStart_toStartOf="@id/chatsText"
            android:layout_marginTop="4dp"
            android:visibility="visible" />

        <!-- Teks Navigasi Kanan (New Chat) -->
        <TextView
            android:id="@+id/newChatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Chat"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end" />

        <!-- Garis Bawah untuk Teks "New Chat" -->
        <View
            android:id="@+id/newChatUnderline"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#00A8FF"
            app:layout_constraintTop_toBottomOf="@id/newChatText"
            app:layout_constraintEnd_toEndOf="@id/newChatText"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ViewPager2 untuk konten fragment -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/navigationContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>